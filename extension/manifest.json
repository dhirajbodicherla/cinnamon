{
  "manifest_version": 2,
  "name": "Cinnamon",
  "version": "1.0.0",
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "chrome_icon.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://avocado.io/*"],
      "js": ["content_script.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "https://avocado.io/",
    "tabs",
    "activeTab"
  ]
}